<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentACar.Views.NewPostPage">
    <ContentPage.Content>
        <StackLayout Margin="50,0" VerticalOptions="Center">
            <Entry Placeholder="Description" Text="{Binding NewPost.Description}"/>
            <Entry Placeholder="Price" Keyboard="Numeric" MaxLength="11"  Text="{Binding NewPost.Price}"/>
            <Entry Placeholder="Address" Text="{Binding NewPost.Address}"/>
            <Button Text="Create Post" Command="{Binding CreatePostCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentACar.Views.RegisterPage"
             Title="Register">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Username" Text="{Binding User.Username}"/>
            <Entry Placeholder="Password" IsPassword="True" Text="{Binding User.Password}"/>
            <Entry Placeholder="First Name" Text="{Binding User.FirstName}"/>
            <Entry Placeholder="Last Name" Text="{Binding User.LastName}"/>
            <Entry Placeholder="PhoneNumber" Text="{Binding User.PhoneNumber}"/>
            <Button Text="Register" Command="{Binding SignUpCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
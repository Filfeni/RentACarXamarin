<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentACar.Views.ExplorePage"
             Title="Explore">
    <ContentPage.Content>
        <StackLayout>
            <Image Aspect="AspectFill" Source="explorebackground.jpg"></Image>
            <Label Style="{StaticResource MainTabLabelStyle}" Text="Go on a trip."></Label>
            <Entry Style="{StaticResource MainTabEntryStyle}" Placeholder="¿What car are you looking for?" Text="{Binding SearchFilter}"/>
            <Button Style="{StaticResource MainTabButtonStyle}" Text="Search" Command="{Binding SearchCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>